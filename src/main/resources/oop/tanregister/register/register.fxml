<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="oop.tanregister.register.RegisterController"
      alignment="CENTER"
      spacing="20"
      prefWidth="650"
      prefHeight="400">

    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Text text="User Registration">
        <font>
            <Font name="Arial Bold" size="24"/>
        </font>
    </Text>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="firstNameField" GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="200"/>

        <Label text="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>

        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="emailField" GridPane.columnIndex="0" GridPane.rowIndex="5" prefWidth="200"/>

        <Label text="Phone Number" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200"/>

        <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
        <TextField fx:id="addressField" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" prefWidth="420"/>

        <Label text="Enter password" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" prefWidth="420"/>

        <Label text="Confirm Password" GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.columnSpan="2"/>
        <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="0" GridPane.rowIndex="11" GridPane.columnSpan="2" prefWidth="420"/>

        <HBox spacing="15" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="13" GridPane.columnSpan="3">
            <Button fx:id="saveButton" text="Save" onAction="#handleSave" />
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
            <Button fx:id="loginButton" text="Login" onAction="#handleLoginRedirect" />

        </HBox>
    </GridPane>

</VBox>
