<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="oop.tanregister.register.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="650"
      prefHeight="400">

    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>

    <Text text="Login">
        <font>
            <Font name="Arial Bold" size="24"/>
        </font>
    </Text>

    <GridPane hgap="10" vgap="10" alignment="CENTER">

        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="200"/>

        <Label text="Enter password" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" prefWidth="420"/>


        <HBox spacing="15" alignment="CENTER_RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="13" GridPane.columnSpan="3">
            <Button fx:id="loginButton" text="Login" prefWidth="60" onAction="#handleLogin" />
            <Button fx:id="exitButton" text="Exit" prefWidth="60" onAction="#handleExit" />
        </HBox>
    </GridPane>


</VBox>
